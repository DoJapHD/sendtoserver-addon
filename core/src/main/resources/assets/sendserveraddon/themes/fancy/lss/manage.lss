TextField {
    top: 0;
    left: 0;
    height: 20;
    width: 100%;
    margin: 2 15 5 5;
}

.container-background {
  width: 100%;
  height: 100%;

  alignment-x: center;
  alignment-y: center;

  background-color: rgba(20, 20, 20, 0.8);
}

.manage-container {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;

	.input-container {
    width: 100%;
    height: 100;
    left: 50%;
    top: 47%;
    alignment-x: center;
    alignment-y: center;

	  background-color: rgba(20, 20, 20, 1.0);
	  padding-top: 20.0;
	  padding-left: 10.0;
	  padding-right: 10.0;
	  padding-bottom: 45.0;
	  border-radius: 5;
	  border: 1 #008FE8;

    .input-list {
      left: 0;
      top: 10;
      width: 100%;
      bottom: -20;
    }
  }
}

Shortcut {
  background-color: rgba(17,17,17,0.7);
  border-radius: 5;
}

Shortcut:active {
  background-color: rgba(17,17,17,0.70);
}

Shortcut:selected {
  border: 1 #008FE8;
  border-radius: 5;
  background-color:rgba(20,20,20,0.50);
}


.input-name-list {
  margin-left: 5;
  height: 25;
  width: 100%;
}


.label-name {
  margin-left: 15;
  margin-bottom: 2;
}

.remove-container {
  width: 90%;
  height: fit-content;
  left: 50%;
  top: 50%;
  alignment-x: center;
  alignment-y: center;
  space-between-entries: 15;

	background-color: rgba(20, 20, 20, 1.0);
  padding: 10;
  border-radius: 5;
  border: 1 #008FE8;
}

.remove-confirmation {
  left: 50%;
  alignment-x: center;
}

.remove-preview {
  left: 50%;
  alignment-x: center;
  height: 24;
  width: 100%;
}

.remove-button-menu {
  left: 50%;
  alignment-x: center;
  height: 20;
  layout: fill;
  space-between-entries: 8;
  width: 90%;
}


.edit-button-menu {
  margin-top: 20;
}


Button:enabled.button:hover {
  background-color: rgba(160,160,160,0.55) !important;
}
Button:not(:active).button:hover {
  background-color: 1343822105;
}

